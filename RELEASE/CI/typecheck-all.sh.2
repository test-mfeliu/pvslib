#!/usr/bin/env sh

set -ev

pwd
export PVS_DIR=`readlink -f pvslib/pvs`
echo PVS_DIR=$PVS_DIR
export PATH=$PVS_DIR:$PATH
echo PATH=$PATH
cd $PVS_DIR/nasalib
pwd

provethem="../provethem"

if [ ! -x $provethem ]; then
    provethem=`which provethem`
fi

if [ "$provethem" ]; then
  $provethem --clean $* nasalib.all
  $provethem --clearpath --addpath --typecheck $* nasalib.all.2
else
  echo "Directory where PVS is installed must be in the environment variable PATH for this command to work"
fi

ls
